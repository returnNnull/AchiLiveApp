<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="achi"
            type="com.example.achiliveapp.firebase.AwardSchemeDTO" />
    </data>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:divider="@drawable/vertical_divider"
        android:showDividers="middle"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:imgUri="@{achi.img}"
            app:placeholder="@{@drawable/bg_placeholder}"
            app:error="@{@drawable/baseline_broken_image_24}"
            android:scaleType="centerCrop"
            android:contentDescription="achi_img" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@{achi.name}"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{achi.about}"/>

    </LinearLayout>
</layout>